@model SayaGym.Models.Usuario

@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="imagenFondoLogin">
    <div class="container">
        <div class="row">
            <div class="col">
                <img src="~/img/logo.png" alt="Logo Saiya Gym" id="logoImgStatic" />
            </div>
            <div class="col">
                <h1 class="text-center">Login</h1>
                <div class="container div-form-login py-5 px-3">
                    <form asp-action="Login">
                        @if (TempData["MensajeError"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["MensajeError"]
                            </div>
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row align-items-center">
                            <div class="col-3">
                                <label asp-for="Correo" class="col-form-label fw-bold fs-2"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Correo" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <span asp-validation-for="Correo" class="text-info"></span>
                            </div>
                        </div>
                        <div class="row row align-items-center">
                            <div class="col-3">
                                <label asp-for="Contraseña" class="col-form-label fw-bold fs-2"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Contraseña" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <span asp-validation-for="Contraseña" class="text-info"></span>
                            </div>
                        </div>
                        <div class="form-group text-end">
                            <a type="button" class="btn btn-warning" asp-controller="Home" asp-action="Index">Volver al Inicio</a>
                            <input type="submit" value="Aceptar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
