@model SayaGym.Models.Usuario

@{
    ViewData["Title"] = "Detalles Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .div-form-create {
        background-color: #FFC000;
        border-radius: 25px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col noprint">
            <img src="~/img/logo.png" alt="Logo Saiya Gym" width="400" height="400" />
        </div>
        <div class="col noprint">
            <h1 class="text-center">Detalles de Usuario</h1>
            <div class="container div-form-create py-5 px-3">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Cedula)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Cedula)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Rol)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Rol)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Contraseña)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Contraseña)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Sexo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Sexo)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Teléfono)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Teléfono)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Dirección)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Dirección)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Correo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Correo)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Peso)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Peso)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Estatura)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Estatura)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FechaDeNacimiento)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FechaDeNacimiento)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Objetivo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ObjetivoTexto)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                </dl>
                @if (Model.EnfermedadesUsuario.Count() > 0)
                {
                    <b>Enfermedades:</b>
                    <ul>
                        @foreach (EnfermedadUsuario enfermedadUsuario in Model.EnfermedadesUsuario)
                        {
                            <li class="col-sm-4">
                                @enfermedadUsuario.Enfermedad.NombreEnfermedad
                            </li>
                        }
                    </ul>
                }

                <b>AreasATrabajar:</b>
                <ul>
                    @foreach (AreasATrabajarUsuario area in Model.AreasATrabajar)
                    {
                        <li class="col-sm-2">
                            @area.AreaATrabajar
                        </li>
                    }
                </ul>
               
            </div>
        </div>
        
    </div>
    @if (Model.Rutina != null)
    {
        <h2 class="noprint">Rutina</h2>
        @Html.Partial("~/Views/Shared/_TableRutina.cshtml", Model.Rutina)
        ;
    }
</div>
<div class="noprint">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdUsuario">Editar</a> |
    <a class="btn btn-success" asp-action="Index">Regresar</a>
</div>
